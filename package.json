{
  "name": "hylite",
  "version": "1.0.7",
  "description": "A command line tool for highlighting code",
  "author": "Peter @peterbe Bengtsson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/peterbe/hylite.git"
  },
  "bin": {
    "hylite": "dist/index.js"
  },
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "css": "bun run src/index.ts -c",
    "list-css": "bun run src/index.ts --list-css",
    "install:husky": "husky install",
    "compile": "bun build src/index.ts --outfile out/hylite --minify --sourcemap --bytecode --compile",
    "compile:linux-arm64": "bun build src/index.ts --target=bun-linux-arm64 --outfile out/hylite-linux-arm64 --minify --sourcemap --bytecode --compile",
    "compile:linux-x64": "bun build src/index.ts --target=bun-linux-x64 --outfile out/hylite-linux-x64 --minify --sourcemap --bytecode --compile",
    "compile:darwin-arm64": "bun build src/index.ts --target=bun-darwin-arm64 --outfile out/hylite-darwin-arm64 --minify --sourcemap --bytecode --compile",
    "compile:darwin-x64": "bun build src/index.ts --target=bun-darwin-x64 --outfile out/hylite-darwin-x64 --minify --sourcemap --bytecode --compile",
    "compile:windows-x64": "bun build src/index.ts --target=bun-windows-x64 --outfile out/hylite-windows-x64.exe --minify --sourcemap --bytecode --compile",
    "test": "bun test",
    "lint": "biome check",
    "lint:fix": "biome check --write --unsafe",
    "build": "bun run src/build.ts",
    "release": "np --yolo",
    "prerelease": "bun run build",
    "postinstall": "bun run build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "bun-types": "1.3.0",
    "husky": "^9.1.7",
    "np": "^10.2.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "highlight.js": "^11.11.1"
  },
  "engines": {
    "node": "^16 || ^18 || ^20 || ^21 || ^22",
    "bun": "^1"
  }
}
